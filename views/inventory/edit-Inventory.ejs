
<!-- Content Heading: show the title, else return tp home screen -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- The Message Block: Ex if an error appears -->
<%- messages() %>

<!-- Error Block -->
<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
  </ul>
<% } %>

<!-- The Add Classification Display --> <!-- /inv/management -->
<form class="outerBoxBackground" action="/inv/update" method="post">
  <label>ALL FIELDS ARE REQUIRED</label>
  <!-- All within the box -->
  <div class="innerboxBackground">
    <label>Classification:</label><br>
    <%- brands %><br>
    <label for="make">Make</label><br>
    <input type="text" required name="inv_make" value="<%= locals.inv_make %>"
      minlength="3" id="make"
      placeholder="Min of 3 characters"><br>
    <label for="model">Model</label><br>
    <input type="text" required name="inv_model" id="model" value="<%= locals.inv_model %>"
      minlength="3"
      placeholder="Min of 3 characters"><br>
    <label for="Description">Description</label><br>
    <textarea rows="4" required name="inv_description" id="Description"><%= locals.inv_description %></textarea><br>
    <label for="image">Image Path</label><br>
    <input type="text" required name="inv_image" id="image" value="/images/vehicles/no-image.png"><br>
    <label for="Thumbnail">Thumbnail Path</label><br>
    <input type="text" required name="inv_thumbnail" id="Thumbnail" value="/images/vehicles/no-image-tn.png"><br>
    <label for="Price">Price</label><br>
    <input type="number" required name="inv_price" id="Price" value="<%= locals.inv_price %>" placeholder="decimal or integer"><br>
    <label for="year">Year</label><br>
    <input type="number" required name="inv_year" id="year" value="<%= locals.inv_year %>" placeholder="4-digit year" 
      min="1000" max="2050"><br>
    <label for="miles">Miles</label><br>
    <input type="number" required name="inv_miles" id="miles" value="<%= locals.inv_miles %>" placeholder="digits only"><br>
    <label for="color">Color.</label><br>
    <Input type="text" name="inv_color" id="color" value="<%= locals.inv_color %>"
       required><br>  
    <button type="submit">Update Vehicle</button>

    <input type="hidden" name="inv_id"
      <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
      <% } %>>
  </div>
</form>

